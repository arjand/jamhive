= @song.name
= link_to 'Play All', '#', onclick: 'playAll();'
= nested_form_for @song, html: {multipart: true} do |s|
  = s.fields_for :tracks do |t|
    %audio{controls: '', autoplay: '', src: "#{t.object.audio.url}"}
    = link_to 'Record', '#', class: 'start-recording', onclick: 'startRecording();'
    = link_to 'Stop', '#', class: 'stop-recording', onclick: 'stopRecording();'
    = t.link_to_remove 'Remove'
  = s.link_to_add 'Add', :tracks
  = s.submit

= javascript_tag do
  window.songId = "#{j params[:id]}";
